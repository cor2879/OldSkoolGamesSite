{
    "routes": [
      {
        "route": "/",
        "allowedRoles": ["anonymous"]
      }
    ],
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/images/*", "/css/*", "/js/*"]
    },
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html"
      }
    },
    "globalHeaders": {
      "x-frame-options": "DENY",
      "content-security-policy": "default-src 'self'"
    },
    "redirects": [
      {
        "route": "/",
        "to": "https://www.oldskoolgamesandsoftware.com/",
        "statusCode": 301
      }
    ]
  }